{
  "name": "ember-mug",
  "version": "1.0.2",
  "description": "A CLI app for controlling Ember mugs via Bluetooth",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ember-mug": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.tsx",
    "dev-mocked": "EMBER_MOCK=true tsx src/cli.tsx",
    "dev-debug": "tsx src/cli.tsx --debug",
    "prepublishOnly": "npm run build",
    "version": "npm run build"
  },
  "keywords": [
    "ember",
    "ember-mug",
    "mug",
    "cli",
    "bluetooth",
    "ble",
    "temperature",
    "smart-mug"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/singerbj/ember-mug.git"
  },
  "bugs": {
    "url": "https://github.com/singerbj/ember-mug/issues"
  },
  "homepage": "https://github.com/singerbj/ember-mug#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@stoprocent/noble": "^2.3.10",
    "chalk": "^5.3.0",
    "conf": "^12.0.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
